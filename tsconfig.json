    { "path": "packages/game-core" },
    { "path": "packages/content" },
    { "path": "packages/audio" },
    { "path": "packages/ai" },
    { "path": "apps/server" },
    { "path": "apps/web" },
    { "path": "apps/runner" }
  ],
  "files": []
}
